@{
  Layout = "_Layout";
}

@using University.Models;

<h1>Students</h1>

@if (@Model.Count == 0)
{
  <h3>No Students have been added yet!</h3>
} 

<ul>
  @foreach(Student element in Model)
  {
    <li>@Html.ActionLink($"{element.StudentName}", "Details", new { id = element.StudentId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Student", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>