@{
  Layout = "_Layout";
}

@using University.Models;

<h1>Instructors</h1>

@if (@Model.Count == 0)
{
  <h3>No Instructors have been added yet!</h3>
} 

<ul>
  @foreach(Instructor element in Model)
  {
    <li>@Html.ActionLink($"{element.InstructorName}", "Details", new { id = element.InstructorId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Instructor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>