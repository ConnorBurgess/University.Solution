@{
  Layout = "_Layout";
}

@using University.Models;
@model List<University.Models.Course>;

<h1>Courses</h1>

@if (@Model.Count == 0)
{
  <h3>No Courses have been added yet!</h3>
} 

@foreach (Course element in Model)
{
  <li>@Html.ActionLink($"{element.CourseName}", "Details", new { id = element.CourseId })</li>
}

<p>@Html.ActionLink("Add new course", "Create")</p>