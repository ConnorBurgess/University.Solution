@{
  Layout = "_Layout";
}

@model University.Models.Course

<h4>Add a new course</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.CourseName)
    @Html.TextBoxFor(model => model.CourseName)

    @Html.Label("Select Student")
    @Html.DropDownList("StudentId")

    <input type="submit" value="Add new Course" class="btn btn-default" />
}


<p>@Html.ActionLink("Show all courses", "Index")</p>